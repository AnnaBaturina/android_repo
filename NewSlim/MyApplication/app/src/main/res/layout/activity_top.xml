<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.baturina.anna.newslim.TopActivity">


    <ImageView
        android:id="@+id/title_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/yoga_siluette_balls"

        />

    <Button
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/start_training"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />



    <ImageView
        android:id="@+id/mandala1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/minimandola"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/mandala2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/minimandola"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/mandala3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/minimandola"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/mandala4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/minimandola"
        />




</RelativeLayout>
